    <section id="upload" class="section">
     <%= form_for(@sample_upload, controller: 'sample_uploads', action: 'create', method: :post, multipart: true) do |form| %>
     <div class="form-group">
      <div class="field">  
      <%= label_tag :attachment %>
      <%= form.file_field :attachment %>
      </div>
      <div class="action">
         <%= form.button 'Upload', class: 'upload-primary-btn' %>
      </div>
    </div>
      <% end %>
    </section>